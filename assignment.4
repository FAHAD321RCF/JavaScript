function validEmail(email) {

    if (typeof email !== 'string') {
        return "Invalid";
        
    }
    const invalid = /^[\.\-_+@]/.test(email);
    
    const contain = /\s/.test(email);

    const valid = /@/.test(email) && email.endsWith('.com');

    return !invalid && !contain && valid;
}

